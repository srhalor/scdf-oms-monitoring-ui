# =============================================================================
# Runtime Environment Variables
# All values are read at runtime (not baked into build)
# Provided via Helm ConfigMaps/Secrets in Kubernetes
# =============================================================================

# Token API Configuration
OIDM_BASE_URL=https://login-dev2.atradiusnet.com
OAUTH_DOMAIN=DEV_JET_WebGateDomain
OAUTH_SCOPE=DEV_TokenPOC_RS.sharedcomponents

# SSO URLs
SSO_LOGIN_URL=https://oms-monitoring.dev.atradiusnet.com
SSO_LOGOUT_URL=https://oms-monitoring.dev.atradiusnet.com

# Client Credentials (from Kubernetes Secrets)
OAUTH_CLIENT_ID=DEV_OMS_OIDMWebGateID
OAUTH_CLIENT_SECRET=your-client-secret-here

# Session Secret (from Kubernetes Secrets - generate with: openssl rand -base64 32)
SESSION_SECRET=dev-secret-change-in-production-use-openssl-rand-base64-32

# Atradius Headers
ORIGIN_SERVICE=oms-monitoring-ui
ORIGIN_APPLICATION=OMS-Monitoring-Tool

# API Base URL
API_BASE_URL=https://api.dev.atradiusnet.com/sc/oms

# Logging Configuration
ENABLE_LOGGING=true
LOG_LEVEL=info
LOG_FORMAT=json